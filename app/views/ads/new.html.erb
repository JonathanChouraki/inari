<h1>Post an ad </h1>
<%= form_for :ad, url: ads_path do |f| %>
    <p>
        <%= f.label :title %><br/>
        <%= f.text_field :title %><br/>
        <%= f.label :description %><br/>
        <%= f.text_area :description %><br/>
        <%= f.label :price %><br/>
        <%= f.text_field :price %><br/>
        <%= f.label :city %><br/>
        <%= f.text_field :city %><br/>
        <%= f.submit %>
    </p>
<% end %>
